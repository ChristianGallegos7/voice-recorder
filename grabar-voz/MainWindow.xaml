<Window x:Class="grabar_voz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Recorder" 
        Height="229" 
        Width="347"
        Background="#F0F0F0"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="RecordButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="#4CAF50" 
                                CornerRadius="10"
                                BorderThickness="0">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" 
                                        TargetName="border" 
                                        Value="#45A049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0,10,31,37">
        <StackPanel 
        VerticalAlignment="Center" 
        HorizontalAlignment="Center">
            <TextBlock 
        Text="Grabar Voz" 
        FontSize="24" 
        FontWeight="Bold" 
        HorizontalAlignment="Center" 
        Margin="0,0,0,20"
        Foreground="#333"/>
            <TextBlock 
        x:Name="TimerTextBlock" 
        HorizontalAlignment="Center"
        Text="00:00" 
        FontSize="20" 
        FontWeight="Bold" 
        Foreground="#333" 
        />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button 
            Content="Iniciar Grabación" 
            Name="StartRecording"
            Click="StartRecording_Click" 
            Style="{StaticResource RecordButtonStyle}" Width="120"/>

                <Button 
            Content="Parar Grabación" 
            Name="StopRecording"
            Click="StopRecording_Click" 
            Style="{StaticResource RecordButtonStyle}"
            Background="#F44336" Width="122"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
