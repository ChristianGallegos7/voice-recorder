<Window x:Class="grabar_voz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:grabar_voz"
        mc:Ignorable="d"
        Title="Voice Recorder" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Button Content="Iniciar Grabación"
                    Name="StartRecording"
                    Click="StartRecording_Click" 
                    Margin="10"/>
            <Button Content="Detener Grabación" 
                    Name="StopRecording"
                    Click="StopRecording_Click" 
                    Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
